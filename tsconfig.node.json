{
    "extends": "./tsconfig.json",

    "compilerOptions": {
        "lib": ["ES2021", "DOM"],
        "module": "CommonJS",
        "target": "ES2021",
        "moduleResolution": "node",
        "allowJs": true,
        "types": ["node", "jest"],

        "outDir": "./dist",
        "declaration": true
    },
    "include": [
        "lib/**/*",
        "pipeline/**/*",
        "assets/Types.d.ts",
        "assets/Plausible.ts",
        "tests/**/*"
    ]
}